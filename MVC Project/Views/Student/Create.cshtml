@model MVC_Project.ViewModels.NewStudentViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Student</h2>
@using (Html.BeginForm("Create", "Student"))
{
<div class="form-group">
    @Html.LabelFor(m => m.student.FirstName)
    @Html.TextBoxFor(m => m.student.FirstName, new { @class = "form-control" })

</div>

<div class="form-group">
    @Html.LabelFor(m => m.student.LastName)
    @Html.TextBoxFor(m => m.student.LastName, new { @class = "form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.student.CourseId)
    @Html.DropDownListFor(m => m.student.CourseId, new SelectList(Model.Courses, "Id", "CourseName", new { @class = "form-control"}));
</div>
}

